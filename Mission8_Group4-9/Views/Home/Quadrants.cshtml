@{
    ViewData["Title"] = "Quadrants";
}
@model List<Tasks>;
    
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2 class="sub-header">Quadrant 1</h2>
            <div class="table-responsive">
                <table class="table table-dark table-bordered table-striped">
                    <thead class="font-weight-bold">
                        <tr>
                            <td>Task</td>
                            <td>Due Date</td>
                            <td>Category</td>
                            <td>Completed</td>
                            <td>Quadrant</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if ((item.Quadrant == 1) & (item.Completed == false))
                            {
                                 <tr>
                                    <td>@item.TaskName</td>
                                    <td>@item.DueDate</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td>@item.Completed</td>
                                    <td>@item.Quadrant</td>

                                    <td><a asp-controller="Home" asp-action="Edit" asp-route-taskId="@item.TaskID">Edit</a></td>
                                    <td><a asp-controller="Home" asp-action="Delete" asp-route-taskId="@item.TaskID">Delete</a></td>
                                 </tr>
                            }
                        }
                    </tbody>

