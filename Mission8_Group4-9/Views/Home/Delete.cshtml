@{
    ViewData["Title"] = "Confirm Deletion";
}

@model Tasks

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the following task?</h3>
<p>@Model.TaskName</p>

<form asp-action="Delete" asp-controller="Home" method="post">
    <button type="submit">Delete</button>
    <a asp-action="Quadrants" asp-controller="Home" class="btn-primary">Cancel</a>

    <input type="hidden" asp-for="TaskID" />
</form>