
@{
    ViewData["Title"] = "Add/Edit Task";
}

@model Mission8_Group4_9.Models.Tasks

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post">

        <label asp-for="TaskName">Task Name:</label>
        <input asp-for="TaskName" /><br />

        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate" /><br />

        <label asp-for="Quadrant">Quadrant:</label>
        <input asp-for="Quadrant" /><br />

        <label asp-for="Category">Category:</label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select><br />

        <label asp-for="Completed"></label>
        <select asp-for="Completed">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <button type="submit">Add</button>

    </form>
</div>